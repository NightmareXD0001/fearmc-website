{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // Change to CommonJS for compatibility with Node.js
    "moduleResolution": "node", // Node module resolution
    "esModuleInterop": true, // Enable interoperability between ES and CommonJS modules
    "skipLibCheck": true,
    "allowJs": true, // Allow JavaScript files
    "noEmit": false, // Emit output for the backend
    "outDir": "./dist", // Specify output directory for compiled files
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "api/**/*" // Ensure the serverless functions are included in the compilation
  ],
  "exclude": [
    "node_modules" // Exclude node_modules
  ]
}
